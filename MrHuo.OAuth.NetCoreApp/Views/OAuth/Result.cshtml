@{
    ViewData["Title"] = "授权结果";
}

<div class="text-center mt-5">
    <h1 class="display-5">恭喜，@(ViewBag.OAuthPlatform)授权成功！</h1>
    <img class="img-thumbnail mt-4" style="border-radius: 100%" width="150" height="150" src="@(ViewBag.OAuthUser.Avatar)" />
    <h4 class="mt-2">@(ViewBag.OAuthUser.Name)</h4>
    <hr />
    <h6>详细信息：</h6>
    <code class="mt-2" style="background: #f5f5f5; display: block; padding: 10px; border-radius: 10px;line-height: 180%;">@(ViewBag.OAuthUserDetail)</code>
</div>